        xmlns:local="clr-namespace:Estacionamiento"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="PapayaWhip">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
